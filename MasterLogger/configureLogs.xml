<?xml version="1.0" encoding="utf-8" ?>
<sources>
  <masterLog>c:\Temp\MasterLog\MasterLog.log</masterLog>
  <logSource>
    <type>txt</type>
    <location>C:\Temp\logs\app.log</location>
    <format>Time,Level,Output</format>
  </logSource>
  <logSource>
    <type>dbTable</type>
    <connStr>server=localhost\SQLExpress;database=Portal;integrated security=true</connStr>
    <query>SELECT * FROM Documents WHERE DateModified > @DateModified ORDER BY DateModified</query>
    <IDField>DocumentID</IDField>
    <mapping time="DateModified" output="'{1}' last changed by user '{8}'" error="Error"></mapping>
    <pollingInterval>5000</pollingInterval>
  </logSource>
  <logSource>
    <type>xml</type>
    <location>C:\Temp\xml\log.xml</location>
    <format>Time,SourceID,Level,Output</format>
  </logSource>
</sources>
